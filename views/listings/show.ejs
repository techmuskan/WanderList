<% layout("layouts/boilerplate") -%>

<div class="row justify-content-center my-3">
    <div class="col-8">
        <h3><b><%= listing.title %></b></h3>    
    </div>

    <div class="card col-8 listing-card my-3">
        <% if (listing.image && listing.image.url) { %>
            <img src="<%= listing.image.url %>" alt="Listing Image" style="width:100%" class="card-img-top show-img">
        <% } else { %>
            <img src="/images/default.jpg" alt="Default Image" style="width:100%" class="card-img-top show-img">
        <% } %>
        
        <div class="card-body">
            <p><i>Owned by <%= listing.owner?.username || "Anonymous" %></i></p>
            <p><%= listing.description %></p>
            <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
            
            <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <div class="btns my-2">
                <form action="/listings/<%= listing._id %>/edit" method="get" class="d-inline">
                    <button class="btn btn-dark px-md-5">Update</button>
                </form>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="d-inline">
                    <button class="btn btn-dark px-md-5">Delete</button>
                </form>
            </div>
            <% } %>
            

            <hr>
            <% if(currentUser) {%>
            <h4>Leave a Review:</h4>
            <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" id="rating" min="1" max="5" name="review[rating]" required>
                    <div class="invalid-feedback">Please select a rating.</div>
                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label" for="comment">Comment</label>
                    <textarea required id="comment" name="review[comment]" rows="5" cols="30" class="form-control"></textarea>
                    <div class="invalid-feedback">Please enter a comment.</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <% } %>

            <h5>All Reviews:</h5>
            <% if(listing.reviews.length === 0) { %>
                <p>No reviews yet. Be the first to review!</p>
            <% } %>

            <div class="row">
                <% listing.reviews.slice().reverse().forEach(review => { %>
                    <div class="card col-5 mb-3 mx-auto">
                        <div class="card-body m-2">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text">
                                Rating: 
                                <% for(let i=0; i<review.rating; i++) { %>‚≠ê<% } %>
                            </p>
                        </div>
                        <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-dark btn-sm">Delete Review</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
