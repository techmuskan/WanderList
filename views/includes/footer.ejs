  </div>

  <hr style="border-color:#333; margin:30px 0;">

  <div style="text-align:center; font-size:0.8rem; color:#aaa;">
    &copy; <%= new Date().getFullYear() %> WanderList. All rights reserved.
  </div>
</footer>

<style>
  html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    font-family: Arial, sans-serif;
  }

  main {
    flex: 1 0 auto;
  }

  #site-footer {
    flex-shrink: 0;
    width: 100%;
    background: linear-gradient(135deg, #1e1e1e, #2c2c2c);
    color: #fff;
    padding: 60px 40px;
    box-shadow: 0 -4px 15px rgba(0,0,0,0.4);
  }

  .footer-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
  }

  .fade-footer {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .fade-footer.visible {
    opacity: 1;
    transform: translateY(0);
  }

  footer a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  footer a:hover {
    color: #ff6b6b;
  }

  .social-icon {
    display: inline-block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 20px rgba(255,107,107,0.6);
    border-radius: 50%;
  }

  @media (max-width: 768px) {
  .footer-container {
    flex-direction: row; /* Stack footer sections vertically */
    align-items: center;    /* Center all sections */
    text-align: center;
  }

  #site-footer {
    padding: 15px 7px; /* Reduce overall padding */
  }

  #site-footer h5 {
    font-size: 1.1rem; /* Slightly smaller headings */
    margin-bottom: 10px;
  }

  #site-footer p,
  .footer-container ul {
    font-size: 0.85rem; /* Slightly smaller text for readability */
  }

  .footer-container ul li {
    margin-bottom: 8px; /* Space between links */
  }

  .social-icon {
    font-size: 1.4rem; /* Slightly smaller icons */
    margin: 0 8px;
  }
}
  /* Small screen styles */
@media (max-width: 480px) {
  .footer-container {
    flex-direction: row; /* Stack sections vertically */
    align-items: center;    /* Center all content */
    text-align: center;
  }

  #site-footer {
    padding: 16px 5px; /* Reduce padding */
  }

  #site-footer h5 {
    font-size: 1rem; /* Smaller headings */
    margin-bottom: 8px;
  }

  #site-footer p,
  .footer-container ul {
    font-size: 0.8rem; /* Smaller paragraph and list text */
    line-height: 1.4;
  }

  .footer-container ul li {
    margin-bottom: 6px; /* Space between links */
  }

  .social-icon {
    font-size: 1.2rem; /* Slightly smaller icons */
    margin: 0 5px;      /* Adjust spacing */
  }

  hr {
    margin: 10px 0; /* Reduce hr spacing */
  }
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const footer = document.getElementById("site-footer");
    if(!footer) return;
    footer.classList.add("visible");

    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if(entry.isIntersecting){
          footer.classList.add("visible");
        }
      });
    }, { threshold: 0.1 });
    observer.observe(footer);
  });
</script>
